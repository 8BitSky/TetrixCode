/* Example Sketch demonstrating how to control two TETRIX TorqueNADO DC motors using a SONY PS4 gaming controller.
 * Motor Channel 1 is controlled by PS4 Left Joystick Y axis
 * Motor Channel 2 is controlled by PS4 Right Joystick Y axis
 * Hardware: TETRIX PRIZM, TeleOp module and SONY PS4 gaming controller.
 * Date: 09/26/2018
 * Author: PWU
 */



#include <TELEOP.h>   // TETRIX TeleOp module Library
#include <PRIZM.h>    // TETRIX PRIZM Library

PRIZM prizm;          
PS4 ps4;             

int Motor1;         
int Motor2;          

float lowSpeed = 0.2; // fifth speed
float medSpeed = 0.5;
float highSpeed = 1;

float currentSpeed = medSpeed;
int shift = 2;

void setup() {

  prizm.PrizmBegin();            
  ps4.setDeadZone (LEFT,10);    
  ps4.setDeadZone(RIGHT,10);     

}

void loop() {

  ps4.getPS4();                                 

  if(ps4.Connected){                            
  Shifter();
  BasicMove(); 
  }
  else{                                         
      prizm.setMotorPowers(0,0);
  }

  
}

void Shifter(){
 if(ps4.Button(UP)==1 && shift <3){
   shift++;
 }
  if(ps4.Button(DOWN)==1 && shift >1){
  shift--;
 }
 switch (shift) {
  case 1:
    currentSpeed = lowSpeed;
    break;
  case 2:
     currentSpeed = medSpeed;
    break;
  case 3:
     currentSpeed = highSpeed;
    break;
}
}


void BasicMove(){
    //Basic Move Code
      Motor1 = ps4.Motor(LY);                  
      Motor2 = ps4.Motor(RY);                  
      prizm.setMotorPowers(Motor1*currentSpeed, Motor2*currentSpeed);   
    //90 Degree turns
    if(ps4.button(L1)==1){
    prizm.setMotorDegrees(360,270,360,-270);delay(1200);
    }
    if(ps4.button(R1)==1){
    prizm.setMotorDegrees(360,-270,360,270);delay(1200);
    }
    prizm.resetEncoders();
}
